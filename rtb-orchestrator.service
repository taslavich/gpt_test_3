[Unit]
Description=RTB Orchestrator Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/root/RTB/gpt_test_3 
ExecStart=/root/RTB/gpt_test_3/cmd/orchestrator/orchestrator  
Restart=always
RestartSec=1
StartLimitInterval=0

# Environment файл из проекта
EnvironmentFile=/root/RTB/gpt_test_3/cmd/orchestrator/orchestrator.env

# Logging
StandardOutput=append:/var/log/rtb/orchestrator.log
StandardError=append:/var/log/rtb/orchestrator.error.log
SyslogIdentifier=rtb-orchestrator

# Security
NoNewPrivileges=yes
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
