[Unit]
Description=RTB Mock DSP 3 Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/root/RTB/gpt_test_3  
ExecStart=/root/RTB/gpt_test_3/cmd/dsp3/dsp3 
Restart=always
RestartSec=1
StartLimitInterval=0

# Environment файл из проекта
EnvironmentFile=/root/RTB/gpt_test_3/cmd/dsp3/dsp3.env

# Logging
StandardOutput=append:/var/log/rtb/dsp3.log
StandardError=append:/var/log/rtb/dsp3.error.log
SyslogIdentifier=rtb-dsp3

# Security
NoNewPrivileges=yes
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
