[Unit]
Description=RTB SPP Adapter Service
After=network.target rtb-orchestrator.service
Wants=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/root/RTB/gpt_test_3 
ExecStart=/root/RTB/gpt_test_3/cmd/spp-adapter/spp-adapter 
Restart=always
RestartSec=1
StartLimitInterval=0

# Environment файл из проекта
EnvironmentFile=/root/RTB/gpt_test_3/cmd/spp-adapter/spp-adapter.env

# Logging
StandardOutput=append:/var/log/rtb/spp-adapter.log
StandardError=append:/var/log/rtb/spp-adapter.error.log
SyslogIdentifier=rtb-spp-adapter

# Security
NoNewPrivileges=yes
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
